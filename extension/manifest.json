{
    "manifest_version": 3,
    "name": "Instagram Saver",
    "version": "1.0.0",
    "description": "Cross-device content saver for Instagram with iPad integration",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tiktok.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.youtube.com/*",
                "*://*.twitter.com/*",
                "*://*.x.com/*",
                "*://*.tiktok.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}